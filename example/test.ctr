import generate: \*.

model City [
  string SOME_CONSTANT pure ['constant value'],

  string country,
  string city,
  int countryCode,
  int cityCode
].

model Person [
  string firstName,
  string lastName,
  reference[City] city
].

function testUserExists [
  int personId
] -> boolean exists.

action getPeopleFromCity [
    Request City,
    Response [
        Person[] person
    ],
    Action 'search for person in db'
].

action deletePerson [
    Request [
        int personId,
        enum['wipe', 'hide'] method
    ],
    Action ['get user from db',
            'delete user'],
    Before [ testUserExists ]
].

endpoint countUsers [
    Response [
        int count
    ]
].

endpoint Person graphql [
    Request [
        string firstName nullable
    ],
    Response Person[]
].

api graphql
    root: '/gql',
    graphiql: True.

api generate.
